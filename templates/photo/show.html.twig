{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ photo.description }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ photo.title }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ photo.imageUrl }}</td>
            </tr>
            <tr>
                <th>MetaInfo</th>
                <td>{{ photo.metaInfo ? photo.metaInfo|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ photo.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ photo.createdAt ? photo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ photo.modifiedAt ? photo.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_photo_index') }}">back to list</a>

    <a href="{{ path('app_photo_edit', {'id': photo.id}) }}">edit</a>

    {{ include('photo/_delete_form.html.twig') }}
{% endblock %}
