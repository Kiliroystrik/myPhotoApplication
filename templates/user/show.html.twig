{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="wrapper">
		<h1>User</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>

				<tr>
					<th>Name</th>
					<td>{{ user.customer.name }}</td>
				</tr>

				<tr>
					<th>Age</th>
					<td>{{ user.customer.age }}</td>
				</tr>

			</tbody>
		</table>

		<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

		{# {{ include('user/_delete_form.html.twig') }} #}
	</div>
{% endblock %}
